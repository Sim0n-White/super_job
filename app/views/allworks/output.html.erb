<p id="notice"><%= notice %></p>

<h1>Works</h1>
<table class="table table-striped table-dark wmaincol">
  <thead>
  <tr>
    <th>Strukt</th>
    <th>Company</th>
    <th>Country</th>
    <th>City</th>
    <th>Searched profession</th>
    <th>Experience</th>
    <th>Payment</th>
    <th>Valuta</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @works.each do |work| %>
      <tr>
        <td class="wmaincol"><%= work.strukt %></td>
        <td class="wmaincol"><%= work.company %></td>
        <td class="wmaincol"><%= Country.find(work.countryid).coname %></td>
        <td class="wmaincol"><%= City.find(work.cityid).ciname %></td>
        <td class="wmaincol"><%= Worklist.find(work.profession).woname %></td>
        <td class="wmaincol"><%= Experience.find(work.experience).exname %></td>
        <td class="wmaincol"><%= work.payment %></td>
        <td class="wmaincol"><%= work.valuta %></td>
        <td class="wmaincol"><%= link_to 'Show', work %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'Back',  root_path, class:"wmaincol"%>