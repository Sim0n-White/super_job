<p id="notice"><%= notice %></p>

<h1>All searchers</h1>

<table class="table table-striped table-dark">
  <thead>
  <tr>
    <th>Name</th>
    <th>Surname</th>
    <th>Profession</th>
    <th>Schedule</th>
    <th>Country</th>
    <th>City</th>
    <th>Wanted payment</th>
    <th>Valuta</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @searchers.each do |searcher| %>
    <tr>
      <td><%= searcher.name %></td>
      <td><%= searcher.surname %></td>
      <td><%= Worklist.find(searcher.profession).woname %></td>
      <td><%= Timework.find(searcher.wtime).wotime %></td>
      <td><%= Country.find(searcher.country_id).coname %></td>
      <td><%= City.find(searcher.city_id).ciname %></td>
      <td><%= searcher.payment %></td>
      <td><%= searcher.valuta %></td>
      <td><%= link_to 'Show', searcher %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
