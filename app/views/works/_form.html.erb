<body class="workback">
<%= form_with(model: work, local: true) do |form| %>
  <% if work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(work.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
        <% work.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Structure" %>
    <%= form.text_field :strukt, class: 'textfix' %>
  </div>

  <div class="field">
    <%= form.label :company %>
    <%= form.text_field :company, class: 'textfix' %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'textfix' %>
  </div>

  <div class="field">
    <%= form.label :surname %>
    <%= form.text_field :surname, class: 'textfix' %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'textfix' %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.number_field :phone, class: 'textfix' %>
  </div>

  <div class="field">
    <%= form.label :profession %>
    <%= form.collection_select :profession, Worklist.order(:woname), :id, :woname%>
  </div>

  <div class="field">
    <%= form.label :experience %>
    <%= form.collection_select :experience, Experience.order(:id), :id, :exname %>
  </div>

  <div class="field">
    <%= form.label "Schedule" %>
    <%= form.collection_select :wtime, Timework.order(:id), :id, :wotime %>
  </div>

  <div class="field">
    <%= form.label :needs %>
    <%= form.text_area :needs, class: 'textfieldfix' %>
  </div>

  <div class="field">
    <%= form.label "Information about your company" %>
    <%= form.text_area :cominfo, class: 'textfieldfix' %>
  </div>

  <div class="field">
    <%= form.label "Country" %>
    <%= form.collection_select :countryid, Country.order(:id), :id, :coname, {:class => 'form-control'} %>
  </div>

  <div class="field">
    <%= form.label "City" %>
    <%= form.grouped_collection_select :cityid, Country.order(:coname), :cities, :coname, :id, :ciname, {class: 'browser-default custom-select'} %>
  </div>

  <div class="field">
    <%= form.label :street %>
    <%= form.text_field :street, class: 'textfix' %>
  </div>

  <div class="field">
    <%= form.label :house %>
    <%= form.text_field :house, class: 'textfix' %>
  </div>

  <div class="field">
    <%= form.label :payment %>
    <%= form.number_field :payment, class: 'textfix' %>
  </div>

  <div class="field">
    <%= form.label 'Value' %>
    <%= form.collection_select :value, Valutum.order(:valuena), :id, :valuena%>
  </div>

  <div class="field">
    <%= form.hidden_field :userid, value: current_user.id, :readonly => true %>
  </div>

  <div class="actions">
    <%= form.submit 'Create', class: "btn-empty-green success btn-lg" %>
  </div>
<% end %>
</body>

