<p id="notice"><%= notice %></p>

<h1>Works</h1>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th>Strukt</th>
      <th>Company</th>
      <th>Name</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <% if current_user.id == work.userid %>
        <tr>
          <td><%= work.strukt %></td>
          <td><%= work.company %></td>
          <td><%= Country.find(work.countryid).coname %></td>
          <td><%= City.find(work.cityid).ciname %></td>
          <td><%= work.email %></td>
          <td><%= work.phone %></td>
          <td><%= link_to 'Show', work %></td>
          <td><%= link_to 'Edit', edit_work_path(work) %></td>
          <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Work', new_work_path %><br/>
